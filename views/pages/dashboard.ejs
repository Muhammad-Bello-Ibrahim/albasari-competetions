<!-- Font Awesome CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="/styles/dashboard-mobile.css">
<link rel="stylesheet" href="/styles/dashboard.css">

    <div class="container">
        <div>
            <%- include('../partials/nav') %>
        <main class="main">
            <div class="banner">
                <h2>Welcome!</h2>
                <h2 class="school_name"> <%= name %> </h2>
            </div>
            <div class="main_inner">
                <div class="items_container">
                <h3>Overview</h3>
                <div class="dashboard" id="dashboard">
                <div class="dashboard_top">
                   <div class="row">
                    <div class="dashboard_card" style="background: rgb(6, 187, 118); color: #ffff;">
                        <div class="icon"><i class="fa fa-window-restore"></i></div>
                        <div class="detail">
                            <h1> <%= categories %></h1>
                            <p>Registered Category</p>
                        </div>
                    </div>
                    <div class="dashboard_card">
                        <div class="icon"><i class="fa fa-users"></i></div>
                        <div class="detail">
                            <h1><%= totalStudents %></h1>
                            <p>Registered Students</p>
                        </div>
                    </div>
                   </div>
                   <div class="row">
                    <div class="dashboard_card">
                        <div class="icon"><i class="fa fa-certificate" aria-hidden="true"></i>
                        </div>
                        <div class="detail">
                            <h1> <%= categories %></h1>
                            <p>Registered Programs</p>
                        </div>
                    </div>
                    <div class="dashboard_card" style="background:rgb(240, 121, 121); color: #ffff; ">
                        <div class="icon"><i class="fa fa-circle-o-notch" aria-hidden="true"></i>
                        </div>
                        <div class="detail">
                            <h3>Application status</h3>
                            <p style="margin-top: 10px;"> pending</p>
                        </div>
                    </div>
                   </div>
                    
                </div>
                <div class="dashboard_bottom">
                    <div class="start_app">
                        <a href="/app/application">Start New Application</a>
                    </div>
                </div>
                </div>
                <!-- applications section -->
                 <div class="applications" id="applications">

                 </div>
                </div>
            </div>
        </main>
        <%- include('../partials/hamburger.ejs') %>
    </div>
    </div>
<script>
    document.querySelector('.hambuger').addEventListener('click', function() {
    document.querySelector('.main_nav').classList.toggle('open');
    console.log("clicked");
  });
</script>
